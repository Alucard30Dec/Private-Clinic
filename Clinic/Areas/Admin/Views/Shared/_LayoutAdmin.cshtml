
@using System.Web.Mvc.Html
@{
    Layout = null;
    var title = ViewBag.Title as string ?? "Admin";

    // role flags
    var isAdmin = User.IsInRole("Admin");
    var isDoctor = User.IsInRole("Doctor");
    var isReception = User.IsInRole("Receptionist");
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <!-- Bootstrap (CDN) -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <!-- Tabler Icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/%40tabler/icons-webfont@2.47.0/tabler-icons.min.css" />

    <!-- CSS riêng -->
    <link rel="stylesheet" href="@Url.Content("~/Content/admin.css")" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="admin-wrapper d-flex">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="brand px-3 py-3 d-flex align-items-center">
                <i class="ti ti-activity icon-brand me-2"></i>
                <span class="fw-semibold">Clinic Admin</span>
            </div>

            <nav class="mt-2">
                <ul class="nav flex-column">

                    <!-- Chung cho mọi role -->
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.Nav == "dashboard" ? "active" : "")"
                           href="@Url.Action("Index","Home", new { area = "Admin" })">
                            <i class="ti ti-layout-dashboard me-2"></i> Dashboard
                        </a>
                    </li>

                    <!-- ====== KHỐI MENU CHO ADMIN ====== -->
                    @if (isAdmin)
                    {
                        <li class="nav-item mt-2 text-uppercase small px-3 text-muted">Quản lý (Admin)</li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Nav == "doctors" ? "active" : "")"
                               href="@Url.Action("Index","Doctors", new { area = "Admin" })">
                                <i class="ti ti-stethoscope me-2"></i> Bác sĩ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Nav == "patients" ? "active" : "")"
                               href="@Url.Action("Index","Patients", new { area = "Admin" })">
                                <i class="ti ti-users me-2"></i> Bệnh nhân
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Nav == "services" ? "active" : "")"
                               href="@Url.Action("Index","Services", new { area = "Admin" })">
                                <i class="ti ti-clipboard-heart me-2"></i> Dịch vụ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Nav == "appointments" ? "active" : "")"
                               href="@Url.Action("Index","Appointments", new { area = "Admin" })">
                                <i class="ti ti-calendar-event me-2"></i> Lịch hẹn
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Nav == "reports" ? "active" : "")"
                               href="@Url.Action("Index","Reports", new { area = "Admin" })">
                                <i class="ti ti-chart-bar me-2"></i> Thống kê
                            </a>
                        </li>
                    }

                    <!-- ====== KHỐI MENU CHO BÁC SĨ ====== -->
                    @if (isDoctor)
                    {
                        <li class="nav-item mt-2 text-uppercase small px-3 text-muted">Bác sĩ</li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Nav == "mySchedule" ? "active" : "")"
                               href="@Url.Action("MySchedule","Doctor", new { area = "Admin" })">
                                <i class="ti ti-calendar-share me-2"></i> Lịch khám của tôi
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Nav == "myPatients" ? "active" : "")"
                               href="@Url.Action("MyPatients","Doctor", new { area = "Admin" })">
                                <i class="ti ti-address-book me-2"></i> Bệnh nhân của tôi
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Nav == "encounters" ? "active" : "")"
                               href="@Url.Action("Encounters","Doctor", new { area = "Admin" })">
                                <i class="ti ti-notes me-2"></i> Hồ sơ khám
                            </a>
                        </li>
                    }

                    <!-- ====== KHỐI MENU CHO LỄ TÂN ====== -->
                    @if (isReception)
                    {
                        <li class="nav-item mt-2 text-uppercase small px-3 text-muted">Lễ tân</li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Nav == "requests" ? "active" : "")"
                               href="@Url.Action("Index","Requests", new { area = "Admin" })">
                                <i class="ti ti-inbox me-2"></i> Đơn đăng ký (khách vãng lai)
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Nav == "today" ? "active" : "")"
                               href="@Url.Action("Today","Reception", new { area = "Admin" })">
                                <i class="ti ti-clock-hour-9 me-2"></i> Lịch hẹn hôm nay
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Nav == "create" ? "active" : "")"
                               href="@Url.Action("Create","Reception", new { area = "Admin" })">
                                <i class="ti ti-calendar-plus me-2"></i> Tạo lịch hẹn mới
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Nav == "search" ? "active" : "")"
                               href="@Url.Action("Search","Reception", new { area = "Admin" })">
                                <i class="ti ti-search me-2"></i> Tra cứu bệnh nhân
                            </a>
                        </li>
                    }

                    <!-- Hệ thống -->
                    <li class="nav-item mt-2 text-uppercase small px-3 text-muted">Hệ thống</li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Home", new { area = "" })">
                            <i class="ti ti-home-2 me-2"></i> Về trang người dùng
                        </a>
                    </li>
                    <li class="nav-item">
                        @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <a class="nav-link text-danger" href="javascript:document.getElementById('logoutForm').submit()">
                                <i class="ti ti-logout me-2"></i> Đăng xuất
                            </a>
                        }
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main -->
        <main class="admin-main flex-fill d-flex flex-column">
            @{ Html.RenderPartial("_HeaderAdmin"); }

            <div class="admin-content container-fluid py-4">
                @RenderBody()
            </div>

            @{ Html.RenderPartial("_FooterAdmin"); }
        </main>
    </div>

    <!-- JS: Bootstrap + file riêng -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="@Url.Content("~/Scripts/admin.js")"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
