@inherits System.Web.Mvc.WebViewPage<dynamic>
@using System.Web.Mvc.Html
@{
    Layout = null;
    var title = ViewBag.Title as string ?? "Admin";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <!-- Bootstrap (CDN) -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <!-- Tabler Icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/%40tabler/icons-webfont@2.47.0/tabler-icons.min.css" />

    <!-- CSS riêng -->
    <link rel="stylesheet" href="@Url.Content("~/Content/admin.css")" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="admin-wrapper d-flex">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="brand px-3 py-3 d-flex align-items-center">
                <i class="ti ti-activity icon-brand me-2"></i>
                <span class="fw-semibold">Clinic Admin</span>
            </div>
            <nav class="mt-2">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.Nav == "dashboard" ? "active" : "")"
                           href="@Url.Action("Index","Home", new { area = "Admin" })">
                            <i class="ti ti-layout-dashboard me-2"></i> Dashboard
                        </a>
                    </li>

                    <li class="nav-item mt-2 text-uppercase small px-3 text-muted">Quản lý</li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="ti ti-stethoscope me-2"></i> Bác sĩ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="ti ti-users me-2"></i> Bệnh nhân</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="ti ti-calendar-event me-2"></i> Lịch hẹn</a>
                    </li>

                    <li class="nav-item mt-2 text-uppercase small px-3 text-muted">Hệ thống</li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Home", new { area = "" })">
                            <i class="ti ti-home-2 me-2"></i> Về trang người dùng
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="@Url.Action("LogOff","Account", new { area = "" })">
                            <i class="ti ti-logout me-2"></i> Đăng xuất
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main -->
        <main class="admin-main flex-fill d-flex flex-column">
            @{ Html.RenderPartial("_HeaderAdmin"); }

            <div class="admin-content container-fluid py-4">
                @RenderBody()
            </div>

            @{ Html.RenderPartial("_FooterAdmin"); }
        </main>
    </div>

    <!-- JS: Bootstrap + file riêng -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="@Url.Content("~/Scripts/admin.js")"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
