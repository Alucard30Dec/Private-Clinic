@{
    ViewBag.Title = "Đã gửi hướng dẫn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="forgot-ok" data-stellar-background-ratio="3" style="padding:60px 0;">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 text-center">
                <div class="section-title wow fadeInUp" data-wow-delay="0.2s">
                    <h2>Vui lòng kiểm tra email</h2>
                    <p>Nếu email tồn tại trong hệ thống, bạn sẽ nhận được liên kết đặt lại mật khẩu.</p>
                </div>

                @* Dev mode: nếu bạn chưa cấu hình email và muốn hiển thị link reset ngay tại đây *@
                @if (ViewBag.DevResetLink != null)
                {
                    <div class="alert alert-info" style="margin-top:15px">
                        <strong>Dev mode:</strong> Link đặt lại mật khẩu:
                        <div><a href="@ViewBag.DevResetLink">@ViewBag.DevResetLink</a></div>
                    </div>
                }

                <a class="section-btn btn btn-primary" href="@Url.Action("Login","Account")">Quay lại đăng nhập</a>
            </div>
        </div>
    </div>
</section>
