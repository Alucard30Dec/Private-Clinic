@model Clinic.Models.LoginViewModel
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="login" data-stellar-background-ratio="3" style="padding:60px 0;">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
                <div class="section-title wow fadeInUp" data-wow-delay="0.2s">
                    <h2>Đăng nhập</h2>
                    <p>Vui lòng dùng tài khoản đã đăng ký để tiếp tục đặt lịch khám.</p>
                </div>

                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "wow fadeInUp", role = "form", data_wow_delay = "0.4s" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "margin-bottom:15px" })

                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <label for="Email">Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "you@example.com", autofocus = "autofocus" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-12 col-sm-12" style="margin-top:10px;">
                            <label for="Password">Mật khẩu</label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "••••••••" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6 col-sm-6" style="margin-top:10px;">
                            <div class="checkbox">
                                <label>@Html.CheckBoxFor(m => m.RememberMe) Ghi nhớ đăng nhập?</label>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6 text-right" style="margin-top:10px;">
                            <a href="@Url.Action("ForgotPassword","Account")">Quên mật khẩu?</a>
                        </div>

                        <div class="col-md-12 col-sm-12" style="margin-top:15px;">
                            <button type="submit" class="form-control section-btn btn btn-primary">Đăng nhập</button>
                        </div>

                        <div class="col-md-12 col-sm-12 text-center" style="margin-top:12px;">
                            Chưa có tài khoản?
                            <a href="@Url.Action("Register","Account")">Đăng ký ngay</a>
                        </div>
                    </div>
                }

                <!-- Divider -->
                <div class="row" style="margin-top:25px;">
                    <div class="col-md-12">
                        <div style="display:flex; align-items:center; gap:12px;">
                            <hr style="flex:1; margin:0;" />
                            <span style="white-space:nowrap; color:#777;">hoặc</span>
                            <hr style="flex:1; margin:0;" />
                        </div>
                    </div>
                </div>

                <!-- Google Sign-in -->
                <div class="row" style="margin-top:18px;">
                    <div class="col-md-12">
                        @using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "text-center", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" name="provider" value="Google"
                                    class="section-btn btn btn-default"
                                    style="display:inline-flex; align-items:center; gap:10px; border:1px solid #ddd; padding:10px 16px; font-weight:600;">
                                <!-- Google logo SVG -->
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 48 48" aria-hidden="true" focusable="false">
                                    <path fill="#FFC107" d="M43.611 20.083h-1.611V20H24v8h11.303c-1.651 4.657-6.08 8-11.303 8-6.627 0-12-5.373-12-12s5.373-12 12-12c3.059 0 5.842 1.155 7.957 3.043l5.657-5.657C34.046 6.053 29.268 4 24 4 12.955 4 4 12.955 4 24s8.955 20 20 20 20-8.955 20-20c0-1.341-.138-2.651-.389-3.917z" />
                                    <path fill="#FF3D00" d="M6.306 14.691l6.571 4.814C14.514 16.146 18.86 13 24 13c3.059 0 5.842 1.155 7.957 3.043l5.657-5.657C34.046 6.053 29.268 4 24 4 15.317 4 7.969 9.061 6.306 14.691z" />
                                    <path fill="#4CAF50" d="M24 44c5.166 0 9.86-1.977 13.4-5.2l-6.2-5.2C29.084 35.87 26.658 37 24 37c-5.2 0-9.62-3.315-11.252-7.945l-6.54 5.04C8.83 39.89 15.89 44 24 44z" />
                                    <path fill="#1976D2" d="M43.611 20.083h-1.611V20H24v8h11.303c-0.792 2.232-2.295 4.158-4.203 5.6l6.2 5.2C39.801 35.56 44 30.455 44 24c0-1.341-.138-2.651-.389-3.917z" />
                                </svg>
                                Đăng nhập bằng Google
                            </button>
                        }
                        <p style="margin-top:8px; color:#888; font-size:13px;">
                            * Bạn sẽ được chuyển tới Google để xác thực an toàn.
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

@section Scripts { @Scripts.Render("~/bundles/jqueryval") }
