@model Clinic.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="register" data-stellar-background-ratio="3" style="padding:60px 0;">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
                <div class="section-title wow fadeInUp" data-wow-delay="0.2s">
                    <h2>Đăng ký tài khoản</h2>
                    <p>Tạo tài khoản để đặt lịch khám và quản lý lịch của bạn.</p>
                </div>

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "wow fadeInUp", role = "form", data_wow_delay = "0.4s" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger", @style = "margin-bottom:15px" })

                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <label for="Email">Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "you@example.com", autofocus = "autofocus" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6 col-sm-6" style="margin-top:10px;">
                            <label for="Password">Mật khẩu</label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "••••••••" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6 col-sm-6" style="margin-top:10px;">
                            <label for="ConfirmPassword">Nhập lại mật khẩu</label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "••••••••" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-12 col-sm-12" style="margin-top:15px;">
                            <button type="submit" class="form-control section-btn btn btn-primary">Đăng ký</button>
                        </div>

                        <div class="col-md-12 col-sm-12 text-center" style="margin-top:12px;">
                            Đã có tài khoản?
                            <a href="@Url.Action("Login","Account")">Đăng nhập</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts { @Scripts.Render("~/bundles/jqueryval") }
