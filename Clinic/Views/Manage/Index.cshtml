@model Clinic.Models.IndexViewModel
@{
    ViewBag.Title = "Quản lý tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="manage" data-stellar-background-ratio="3" style="padding:60px 0;">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
                <div class="section-title wow fadeInUp" data-wow-delay="0.2s">
                    <h2>Quản lý tài khoản</h2>
                    <p>Thay đổi mật khẩu, quản lý đăng nhập ngoài (Google), và cài đặt bảo mật.</p>
                    @if (ViewBag.StatusMessage != null && !string.IsNullOrWhiteSpace(ViewBag.StatusMessage.ToString()))
                    {
                        <div class="alert alert-success" style="margin-top:10px;">@ViewBag.StatusMessage</div>
                    }
                </div>

                <div class="panel panel-default wow fadeInUp" data-wow-delay="0.4s" style="border:none; box-shadow:none;">
                    <div class="panel-body">

                        <!-- Password -->
                        <div class="row" style="margin-bottom:18px;">
                            <div class="col-sm-4 text-muted">Mật khẩu:</div>
                            <div class="col-sm-8">
                                @if (Model.HasPassword)
                                {
                                    @Html.ActionLink("Đổi mật khẩu", "ChangePassword", null, new { @class = "section-btn btn btn-primary btn-sm" })
                                }
                                else
                                {
                                    @Html.ActionLink("Tạo mật khẩu", "SetPassword", null, new { @class = "section-btn btn btn-primary btn-sm" })
                                }
                            </div>
                        </div>

                        <!-- External Logins -->
                        <div class="row" style="margin-bottom:18px;">
                            <div class="col-sm-4 text-muted">Đăng nhập ngoài:</div>
                            <div class="col-sm-8">
                                <span class="label label-default" style="margin-right:8px;">@Model.Logins.Count</span>
                                @Html.ActionLink("Quản lý", "ManageLogins", null, new { @class = "section-btn btn btn-default btn-sm", style = "border:1px solid #ddd" })
                            </div>
                        </div>

                        <!-- 2FA (nếu chưa dùng thì chỉ hiển thị mô tả) -->
                        <div class="row" style="margin-bottom:6px;">
                            <div class="col-sm-4 text-muted">Xác thực 2 bước:</div>
                            <div class="col-sm-8 text-muted">
                                Hiện chưa cấu hình nhà cung cấp xác thực hai lớp cho ứng dụng này.
                            </div>
                        </div>

                    </div>
                </div>

                <div class="text-center" style="margin-top:12px;">
                    @Html.ActionLink("Quay lại trang chủ", "Index", "Home", null, new { @class = "section-btn btn btn-default", style = "border:1px solid #ddd" })
                </div>
            </div>
        </div>
    </div>
</section>
