@model Clinic.Models.SetPasswordViewModel
@{
    ViewBag.Title = "Tạo mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="set-password" data-stellar-background-ratio="3" style="padding:60px 0;">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
                <div class="section-title wow fadeInUp" data-wow-delay="0.2s">
                    <h2>Tạo mật khẩu</h2>
                    <p>Tài khoản của bạn hiện chưa có mật khẩu. Hãy đặt mật khẩu để đăng nhập bằng email & mật khẩu ngoài Google.</p>
                    @if (!string.IsNullOrWhiteSpace(ViewBag.StatusMessage as string))
                    {
                        <div class="alert alert-success" style="margin-top:10px;">@ViewBag.StatusMessage</div>
                    }
                </div>

                @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "wow fadeInUp", role = "form", data_wow_delay = "0.4s" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger", @style = "margin-bottom:15px" })

                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <label for="NewPassword">Mật khẩu mới</label>
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "••••••••" })
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-12 col-sm-12" style="margin-top:10px;">
                            <label for="ConfirmPassword">Nhập lại mật khẩu</label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "••••••••" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-12 col-sm-12" style="margin-top:15px;">
                            <button type="submit" class="form-control section-btn btn btn-primary">Lưu mật khẩu</button>
                        </div>

                        <div class="col-md-12 col-sm-12 text-center" style="margin-top:12px;">
                            @Html.ActionLink("Quay lại tài khoản", "Index", "Manage", null, new { @class = "section-btn btn btn-default", style = "border:1px solid #ddd" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts { @Scripts.Render("~/bundles/jqueryval") }
