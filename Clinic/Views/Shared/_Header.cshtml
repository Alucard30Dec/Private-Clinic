@{
    var isPatient = Request.IsAuthenticated && User.IsInRole("Patient");
}

<!-- MENU -->
<section class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon icon-bar"></span>
                <span class="icon icon-bar"></span>
                <span class="icon icon-bar"></span>
            </button>

            <a href="@Url.Action("Index","Home")" class="navbar-brand">
                <i class="fa fa-h-square"></i>ealth Center
            </a>
        </div>

        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav nav-left">
                @if (!isPatient)
                {
                    <li><a href="@Url.Content("#top")" class="smoothScroll">Home</a></li>
                    <li><a href="@Url.Content("#about")" class="smoothScroll">About Us</a></li>
                    <li><a href="@Url.Content("#news")" class="smoothScroll">News</a></li>
                    <li><a href="@Url.Content("#google-map")" class="smoothScroll">Contact</a></li>
                }

                @* Chỉ hiện Doctors khi user là Patient *@
                @if (Request.IsAuthenticated && User.IsInRole("Patient"))
                {
                    <li>@Html.ActionLink("Doctors", "Index", "Doctors")</li>
                }

                @* Mở trang đặt lịch riêng (không anchor/smooth scroll) *@
                <li>@Html.ActionLink("Make an appointment", "Index", "Appointment")</li>
            </ul>

            <ul class="nav navbar-nav navbar-right nav-right">
                @Html.Partial("_LoginPartial")
            </ul>
        </div>
    </div>
</section>
