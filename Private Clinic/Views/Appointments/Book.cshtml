@{
    ViewBag.Title = "Đặt lịch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-5">
    <h2 class="fw-bold mb-4">Đặt lịch khám</h2>


    <ul class="nav nav-pills mb-3" role="tablist">
        <li class="nav-item"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#step1" type="button">1. Chọn bác sĩ</button></li>
        <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#step2" type="button">2. Chọn thời gian</button></li>
        <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#step3" type="button">3. Thông tin bệnh nhân</button></li>
        <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#step4" type="button">4. Xác nhận</button></li>
    </ul>


    <div class="tab-content">
        <div id="step1" class="tab-pane fade show active">
            <div class="row g-3">
                @Html.Partial("~/Views/Shared/_DoctorCard.cshtml", new { Name = $"BS. C{i}", Specialty = "Da liễu", Rating = 4.7 })

            </div>
            <div class="mt-3 text-end">
                <button class="btn btn-primary" data-bs-toggle="tab" data-bs-target="#step2">Tiếp tục</button>
            </div>
        </div>


        <div id="step2" class="tab-pane fade">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Ngày</label>
                    <input type="date" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Ca khám</label>
                    <select class="form-select">
                        <option>Sáng</option>
                        <option>Chiều</option>
                        <option>Tối</option>
                    </select>
                </div>
            </div>
            <div class="mt-3 d-flex flex-wrap gap-2">
                @for (int t = 8; t <= 20; t++)
                {
                    <button class="btn btn-outline-primary btn-sm">@t:00</button>
                }
            </div>
            <div class="mt-3 text-end">
                <button class="btn btn-secondary me-2" data-bs-toggle="tab" data-bs-target="#step1">Quay lại</button>
                <button class="btn btn-primary" data-bs-toggle="tab" data-bs-target="#step3">Tiếp tục</button>
            </div>
        </div>


        <div id="step3" class="tab-pane fade">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Họ tên</label>
                    <input class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Số điện thoại</label>
                    <input class="form-control" />
                </div>
                <div class="col-12">
                    <label class="form-label">Triệu chứng (tuỳ chọn)</label>
<textarea class="form-control" rows="3"></textarea>
                </div>
            </div>
            <div class="mt-3 text-end">
                <button class="btn btn-secondary me-2" data-bs-toggle="tab" data-bs-target="#step2">Quay lại</button>
                <button class="btn btn-primary" data-bs-toggle="tab" data-bs-target="#step4">Tiếp tục</button>
            </div>
        </div>


        <div id="step4" class="tab-pane fade">
            <div class="alert alert-info">Vui lòng kiểm tra lại thông tin đặt lịch trước khi xác nhận.</div>
            <div class="d-flex justify-content-end gap-2">
            </div>
