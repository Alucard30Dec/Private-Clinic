@{
    var brand = ViewBag.Brand as string ?? "Private Clinic";
}
<header>
    <nav class="navbar navbar-expand-lg navbar-clinic fixed-top">
        <div class="container">
            <!-- Logo trái -->
            <a class="navbar-brand fw-bold me-2" href="@Url.Action("Index","Home")">@brand</a>

            <!-- Toggler -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menu + Đăng nhập ở giữa -->
            <div class="collapse navbar-collapse justify-content-center" id="mainNav">
                <ul class="navbar-nav clinic-menu text-center align-items-lg-center">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Home")#about"
                           data-bs-toggle="collapse" data-bs-target="#mainNav">Giới Thiệu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Home")#facility"
                           data-bs-toggle="collapse" data-bs-target="#mainNav">Trang Thiết Bị</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Home")#doctors"
                           data-bs-toggle="collapse" data-bs-target="#mainNav">Bác sĩ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Home")#hero"
                           data-bs-toggle="collapse" data-bs-target="#mainNav">Đặt lịch</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Home")#contact"
                           data-bs-toggle="collapse" data-bs-target="#mainNav">Liên hệ</a>
                    </li>
                    <!-- Nút đăng nhập kế bên menu -->
                    <li class="nav-item">
                        <a class="btn btn-login ms-lg-2" href="@Url.Action("Login","Account")"
                           data-bs-toggle="collapse" data-bs-target="#mainNav">Đăng nhập</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
